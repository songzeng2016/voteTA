/**index.wxss**/

page, .wrapper {
  width: 100%;
  height: 100%;
  background: #e6e6e6;
}

/* header */

.header {
  position: relative;
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  width: 100%;
  height: 240rpx;
  padding-bottom: 32rpx;
  background: #333;
  color: white;
  font-size: 24rpx;
}

.navList {
  text-align: center;
}

.navList .type {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 13rpx;
  border-radius: 50%;
}

.navList .avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.navList .color_1 {
  background: #e06437;
}

.navList .color_2 {
  background: #2d71b6;
}

.navList .color_3 {
  background: #53aadd;
}

.navList .color_4 {
  background: #e28831;
}

.header .guide {
  position: absolute;
  left: 0;
  bottom: -20rpx;
  width: 80rpx;
  height: 20rpx;
  transition: 0.5s left;
}

/* notice */

.notice {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 105rpx;
  background: #fff;
  color: #808080;
  font-size: 27rpx;
}

.content {
  width: 100%;
  border-top: 1px solid #7c7c7c;
}

/* chip */

.hint {
  margin: 30rpx 0 80rpx 70rpx;
  font-weight: 700;
  color: #000;
  font-size: 24rpx;
}

.chipList {
  display: flex;
  justify-content: space-around;
  width: 100%;
  padding: 0 100rpx;
}

.chipList .list {
  text-align: center;
}

.chipList .coin {
  display: block;
  width: 105rpx;
  height: 105rpx;
}

.chipList .price {
  font-weight: 600;
  color: #000;
  font-size: 24rpx;
}

/* grade */

.chipList .price {
  font-weight: 600;
  color: #000;
  font-size: 24rpx;
}

/* grade */

.grade .content {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 60rpx 90rpx 0;
}

.grade .capsule {
  margin-bottom: 25rpx;
}

/* score */

.score .content {
  padding: 0 55rpx;
}

/* 分数列表 */

.scoreList {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 23rpx 0 17rpx 0;
  border-bottom: 1px solid #ccc;
  font-size: 24rpx;
  font-weight: 600;
}

.scoreList .iconWrapper {
  display: flex;
  align-items: center;
}

.scoreList image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 14rpx;
}
